{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".", /* Specify the base directory to resolve non-relative module names. */
    "paths": {
      "@config": ["src/config/index.js"],
      "@state":  ["src/state"],
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.js",
    "**/*.test.ts",
    "**/coverage/*"
  ],
}
